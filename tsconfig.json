{
  "compilerOptions": {
    "target": "es2018",
    "module": "ES2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": false,
    "removeComments": false,
    "sourceMap": true,
    "declaration": true,
    "noEmitOnError": true,
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["es2015", "dom"],
	"paths": {
      "avr8js": ["node_modules/avr8js"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts"]
}